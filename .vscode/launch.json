    "version": "0.2.0",
    "configurations": [
        {
            "type": "node",
            "request": "launch",
            "name": "Launch Sovryn node",
            "skipFiles": [
                "<node_internals>/**"
            ],
            "outFiles": [
                "${workspaceFolder}/**"
            ],
            "runtimeArgs": ["-r", "esm"],
            "program": "${workspaceFolder}/start.js",
            "envFile": "${workspaceFolder}/.env",
        },
    ],
}